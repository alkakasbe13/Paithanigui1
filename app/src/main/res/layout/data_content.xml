<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardElevation="20dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imag"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Saree 01"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imag"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MRP: Rs "
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/imag"
            app:layout_constraintTop_toBottomOf="@id/textTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3500"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/txtmrp"

            app:layout_constraintStart_toEndOf="@id/txt"
            app:layout_constraintTop_toBottomOf="@id/textTitle"/>
        <TextView
            android:id="@+id/txtprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/imag"
            app:layout_constraintTop_toBottomOf="@id/txtmrp" />

        <Button
            android:id="@+id/btoomwish"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/def"
            android:maxLines="2"
            android:text=" to wishlist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#fff"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttoncart"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/ghi"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="add to cart"
            android:textAlignment="center"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="10sp"

            />




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
